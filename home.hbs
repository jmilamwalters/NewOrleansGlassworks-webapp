{{! The main content area on the homepage }}
{{! Class "mega-main-content" added by Psychopomp }}
<main id="home" class="casper-content mega-main-content" role="main">

  {{! S-UI Masthead }}
  <div class="ui inverted masthead segment">

      {{! Native Casper buttons developed to supplant animated CSS3 buttons }}
      <nav class="main-nav overlay clearfix">
        <a class="back-button icon-arrow-left" href="{{@blog.url}}">Home</a>
        <a class="index-button mega-nav-trigger" href="#mega-primary-nav">Menu</a>
      </nav>

    <div class="masthead-container">
      <div class="column">
        <img src="{{asset "img/glassworks-logo.png"}}" class="ui medium image" id="glassworks-logo">
        <div class="brighten">
          <img src="{{asset "img/hot-glass-now.png"}}" class="ui medium image" id="hot-glass-now">
        </div>
        <div class="ui hidden transition information">
          <h1 class="ui inverted header page-title">{{@blog.title}}</h1>
          <h2 class="page-description">{{@blog.description}}</h2>
          <div class="splash-buttons">
            <a class="large basic inverted animated fade ui button" href="/mini-workshops">
              <div class="visible content">Blow Your Own Glass</div>
              <div class="hidden content">Learn More!</div>
            </a>
            <a class="large basic inverted animated fade ui button" href="/young-adults">
              <div class="visible content"><i class="icon child"></i>Summer Workshop</div>
              <div class="hidden content">More Information</div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

<div class="homepage-container">

