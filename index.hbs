{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The main content area on the homepage }}
{{! Class "mega-main-content" added by Psychopomp }}
<main id="content" class="casper-content mega-main-content" role="main">

  {{! The big featured header }}
  <header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
      {{! Native Casper buttons developed to supplant animated CSS3 buttons }}
      <nav class="main-nav overlay clearfix">
        <a class="back-button icon-arrow-left" href="{{@blog.url}}">Home</a>
        <a class="index-button mega-nav-trigger" href="#mega-primary-nav">Menu</a>
      </nav>
  </header>

  <div class="page-container">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

  </div><!-- .page-container -->

    {{! Footer }}
    {{> "footer"}}

    {{! Copyright }}
    {{> "copyright"}}

    {{! Mega Menu Overlay }}
    <div class="mega-overlay"></div>

</main>