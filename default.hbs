<html lang="en" class="no-js">
<head>
    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    {{! Le Favicon }}
    <link rel="shortcut icon" href="{{asset "/img/favicons/favicon.ico"}}" />

    {{! Le Styles }}
    <link rel="stylesheet" type="text/css" href="{{asset "css/semantic.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/screen-1.1.7.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/application.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/custom.css"}}" />

    {{! Le Fonts + Icons }}
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Montserrat:400,700|Merriweather:300,700,700italic,300italic|Open+Sans:300,400,600,700,300italic,400italic,600italic,700italic" />
    <link href="https://fontastic.s3.amazonaws.com/4YowRcYLKkr7V6eAjmEU6m/icons.css" rel="stylesheet">

    {{! Modernizr }}
    <script src="{{asset "js/modernizr.js"}}"></script>

    {{! Le Semantic-UI }}
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.js"></script>
    <script type="text/javascript" src="{{asset "js/semantic.js"}}"></script>

    {{! Le Moment.JS }}
    <script src="http://cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment.min.js" type="text/javascript"></script>

    {{! Le Compiled Scripts }}
    <script type="text/javascript" src="{{asset "js/application.js"}}"></script>

    {{! Le Casper Scripts }}
    <script type="text/javascript" src="{{asset "js/index.js"}}"></script>

    {{! Le Plugins }}
    <script src="{{asset "js/plugins.js"}}"></script>


    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>

<body class="{{body_class}}">

      {{! Mega Header }}
      {{> "mega-header"}}

      {{! Everything else gets inserted here }}
      {{{body}}}

      {{! Mega Navigation }}
      {{> "mega-navigation"}}

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

    {{! Le Masked Input }}
    <script type="text/javascript">
      jQuery(function($){
         $("#telephone").mask("(999) 999-9999");
      });
    </script>

    {{! VH/VW Hacks (for iOS, &c.) }}
    <script type="text/javascript" src="{{asset "js/viewport-units-buggyfill.js"}}"></script>
    <script type="text/javascript">
      window.viewportUnitsBuggyfill.init();
    </script>

    {{! Google Analytics }}
    <script type="text/javascript">
      var ga_ua = 'UA-54982052-1';

      (function(g,h,o,s,t,z){g.GoogleAnalyticsObject=s;g[s]||(g[s]=
          function(){(g[s].q=g[s].q||[]).push(arguments)});g[s].s=+new Date;
          t=h.createElement(o);z=h.getElementsByTagName(o)[0];
          t.src='//www.google-analytics.com/analytics.js';
          z.parentNode.insertBefore(t,z)}(window,document,'script','ga'));
          ga('create',ga_ua);ga('send','pageview');
    </script>

</body>
</html>
